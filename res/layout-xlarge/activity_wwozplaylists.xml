<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".WwozplaylistsActivity" >

            <TextView
                android:id="@+id/txt_Songdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/songdata" />

            <TextView
                android:id="@+id/txt_Songsearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="130"
                android:text="@string/songsearch" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0" />

            <Button
                android:id="@+id/btn_ShowPager"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickShowMore"
                android:text="Next 100"
                android:textColor="#FF0000"
                android:visibility="invisible" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TableRow>

                    <EditText
                        android:id="@+id/txt_easy"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="comma separated (miles, blue, kind)"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_Easy"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickEasy"
                        android:text="@string/easy"
                        android:visibility="visible" />
                </TableRow>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvtitle"
                android:visibility="invisible" />
                <TableRow>

                    <EditText
                        android:id="@+id/txt_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="song title (saints)"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/btn_Title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickTitle"
                        android:text="@string/title"
                        android:visibility="invisible" />
                </TableRow>
            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvartist"
                android:visibility="invisible" />
                <TableRow>

                    <EditText
                        android:id="@+id/txt_artist"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="artist (Armstrong)"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/btn_Artist"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickArtist"
                        android:text="@string/artist"
                        android:visibility="invisible" />
                </TableRow>
            <TextView
                android:id="@+id/tv_album"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvalbum"
                android:visibility="invisible" />
                <TableRow>

                    <EditText
                        android:id="@+id/txt_album"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="album (kind of blu)"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/btn_Album"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickAlbum"
                        android:text="@string/album"
                        android:visibility="invisible" />
                </TableRow>
            </TableLayout>
            <TextView
                android:id="@+id/tv_artisttitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvartisttitle"
                android:visibility="invisible" />
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TableRow>

                    <EditText
                        android:id="@+id/txt_artisttitleartist"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="artist snippet (coltrane)"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/txt_artisttitletitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="song title snippet,  (blue)"
                        android:visibility="invisible" />
                </TableRow>
            </TableLayout>
                    <Button
                        android:id="@+id/btn_ArtistTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickArtistTitle"
                        android:text="@string/artisttitle"
                        android:visibility="invisible" />


            <TextView
                android:id="@+id/tv_shows"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvshows"
                android:visibility="invisible" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TableRow>

                    <Button
                        android:id="@+id/btn_Show"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickShow"
                        android:text="@string/show"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/btn_Showtitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickShowTitle"
                        android:text="@string/showtitle"
                        android:visibility="invisible" />
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TableRow>            
                    <Button
                        android:id="@+id/btn_Showartist"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickShowArtist"
                        android:text="@string/showartist"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/btn_Showalbum"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickShowAlbum"
                        android:text="@string/showalbum"
                        android:visibility="invisible" />
                </TableRow>
            </TableLayout>
            <TextView
                android:id="@+id/tv_top"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvtop" />            
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
                <TableRow>                
                    <Button
                        android:id="@+id/btn_TopTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickTopTitle"
                        android:text="@string/toptitle" />                
                    <Button
                        android:id="@+id/btn_TopArtist"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickTopArtist"
                        android:text="@string/topartist" />  
                    <Button
                        android:id="@+id/btn_TopAlbum"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickTopAlbum"
                        android:text="@string/topalbum" />  
               </TableRow>
            </TableLayout>
            
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TableRow>

                    <Button
                        android:id="@+id/btn_Notadvanced"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickNotadvanced"
                        android:text="@string/notadvanced" />

                    <Button
                        android:id="@+id/btn_Advanced"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickAdvanced"
                        android:text="@string/advanced" />
                </TableRow>
            </TableLayout>            
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TableRow>
                    <Button
                        android:id="@+id/btn_Nearby"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickNearby"
                        android:text="@string/nearby"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/btn_Help"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClickHelp"
                        android:text="@string/help" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>